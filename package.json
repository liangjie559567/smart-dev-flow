{
  "name": "smart-dev-flow",
  "version": "1.15.0",
  "description": "智能开发助手流程 - oh-my-claudecode + Axiom 深度融合",
  "type": "module",
  "files": [
    "agents",
    "skills",
    "hooks",
    "bridge",
    "scripts",
    "omc-dist",
    ".agent",
    ".claude-plugin",
    "CLAUDE.md",
    "AGENTS.md",
    "README.md"
  ],
  "bin": {
    "smart-dev-flow": "bridge/smart-dev-bridge.cjs"
  },
  "scripts": {
    "setup": "node scripts/setup.mjs",
    "install-hooks": "python .agent/guards/install_hooks.py",
    "build": "node scripts/build-codex-server.mjs && node scripts/build-gemini-server.mjs && node scripts/build-mcp-server.mjs",
    "build:codex": "node scripts/build-codex-server.mjs",
    "build:gemini": "node scripts/build-gemini-server.mjs",
    "build:mcp": "node scripts/build-mcp-server.mjs",
    "test:axiom": "node scripts/mcp-axiom-server.mjs",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "claude-code",
    "axiom",
    "multi-agent",
    "dev-flow",
    "ai"
  ],
  "license": "MIT",
  "devDependencies": {
    "vitest": "^4.0.18"
  }
}
